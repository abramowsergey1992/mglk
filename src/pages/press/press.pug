extends ../../layout/layout
block title
	title Манжерок 
block content
	.inner
		+breadcrumb(['Главная'], 'Пресс-центр')

		.block
			.block__head
				.h1 Пресс-центр
				.block__filters
					.block__filter(data-filter="all") Все
					.block__filter(data-filter="smi") СМИ О НАС
					.block__filter(data-filter="news") НОВОСТИ
			.news-list-column
				.news-preview._br(data-filter="news")
